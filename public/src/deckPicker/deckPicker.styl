.deck-picker
	height: 100%
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	h2
		margin-top: -10%
	.deck
		width: 20rem
		padding: 1rem 3rem
		border: 1px solid $grayBorder
		color: $grayFont
		cursor: pointer
		text-align: left
		text-transform: uppercase
		font-size: 12px
		font-weight: bold
		transition: color, background .2s ease-in
		&:hover
			background: $grayHover
			color: black