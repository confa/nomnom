.navbar
	position: fixed
	z-index: 1
	left: 0
	top: 0
	width: 4rem
	height: 100%
	background: $darkGray
	color: $lightGray
	display: flex
	flex-direction: column
	&.root-route
		.navbar-item:not(.navbar-logo)
			background: $gray
			pointer-events: none
	&.slide-route
		.navbar-item.nav-slide
			background: $yellow
			color: black
	&.stats-route
		.navbar-item.nav-stats
			background: $yellow
			color: black
	.navbar-item
		height: 4rem
		display: flex
		flex-direction: column
		align-items: center
		justify-content: center
		border-bottom: 1px solid $gray
		cursor: pointer
		text-decoration: none
		transition: color, background .2s ease-in
		&:visited
			color: $lightGray
		&:not(.navbar-logo):hover
			background: $yellow
			color: black
		&.navbar-logo
			color: white
			font-size: 16px
			font-weight: bold
			text-transform: uppercase
			&:hover
				color: $yellow